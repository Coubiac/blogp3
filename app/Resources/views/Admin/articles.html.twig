{% extends "layout.html.twig" %}
{% block body %}
    <table class="table table-hover">
                <thead>
                <tr>
                    <th>Date de publication</th>
                    <th>Titre</th>
                    <th>Commentaires</th>
                    <th>Lire</th>
                    <th>Editer</th>
                    <th>Supprimer</th>
                </tr>
                </thead>

            <tbody>
            {% for article in listArticles %}
                <tr>
                    <td>{{ article.date|date("d-m-Y H:i:s") }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.comments|length }}</td>
                    <td>
                        <a href="{{ path('view_article', {'slug': article.slug}) }}" class="btn btn-default" role="button"><i class="glyphicon glyphicon-sunglasses"></i></a>
                    </td>
                    <td>
                        <a href="{{ path('edit', {'slug': article.slug}) }}" class="btn btn-default" role="button"><i class="glyphicon glyphicon-edit"></i></a>
                    </td>
                    <td>
                        <a href="{{ path('delete', {'slug': article.slug}) }}" class="btn btn-danger" role="button" data-confirm="Etes-vous certain de vouloir supprimer cet Article ?"><i class="glyphicon glyphicon-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>


            </table>
{% endblock %}

