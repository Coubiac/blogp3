{% extends "layout.html.twig" %}
{% block body %}
    <div id="commenttab" class="table-responsive display responsive nowrap">
        <table class="table table-hover display responsive nowrap" id="myTable">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Role</th>
                <th>Commentaires</th>
                <th>Derni√®re Connexion</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in listUsers %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td><ul>
                            {% for role in user.roles %}
                                <li>{{ role }}</li>
                            {% endfor %}
                        </ul></td>
                    <td>{{ user.comments|length  }}</td>
                    <td></td>
                    <td>
                        <a href="{{ path('deleteUser', {'username': user.username}) }}" class="btn btn-danger" role="button" data-confirm="Etes-vous certain de vouloir supprimer cet utilisateur ?"><i class="glyphicon glyphicon-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
