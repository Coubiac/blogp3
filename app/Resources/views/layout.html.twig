{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">


    <title>{% block title %}{{ blogname }}{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
              integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
              crossorigin="anonymous">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet"
              href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">

        <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,800,700' rel='stylesheet'
              type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
        <link rel="stylesheet"
              href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" rel='stylesheet' type='text/css'>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/jquery.datetimepicker.min.css') }}">
    {% endblock %}
</head>

<body>
{% block header %}
    <div class=" banner
    ">
        <div class="container">
            <div class="logo">
                <a href="{{ path('home') }}"><img src="{{ asset('images/logo.png') }}" class="img-responsive"
                                                  alt=""/></a>
            </div>
        </div>
        <div class="header-bottom">
            <div class="container">
                <div class="head-nav">
                    <span class="menu"> </span>
                    <ul>
                        <li class="{% if app.request.attributes.get('_route') starts with 'home' %}active{% endif %}"><a
                                    href="{{ path('home') }}"><i class="fa fa-home" aria-hidden="true"></i> Accueil</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li class="{% if app.request.attributes.get('_route') starts with 'add' %}active{% endif %}"><a
                                    href="{{ path('add') }}">Ajout</a></li>{% endif %}
                        <li><a href="{{ path('booktopdf') }}" target="_blank" class="btn btn-default">
                                <i class="fa fa-file-pdf-o"></i>
                                Télécharger le livre
                            </a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-cog"
                                                                                          aria-hidden="true"></i> Admin
                                <span class="caret"></span></a>
                            <ul class="dropdown-menu">

                                <li><a href="{{ path('adminUsers') }}">Gestion des utilisateurs</a></li>
                                <li><a href="{{ path('adminComments') }}">Gestion des commentaires</a></li>
                                <li><a href="{{ path('adminArticles') }}">Gestion des articles</a></li>
                            </ul>
                            </li>{% endif %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user-circle"
                                                                                          aria-hidden="true"></i><span
                                        class="caret"></span></a>
                            <ul class="dropdown-menu">
                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                    <li class="{% if app.request.attributes.get('_route') starts with 'login' %}active{% endif %}">
                                        <a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-sign-in"
                                                                                            aria-hidden="true"></i>
                                            Déconnexion</a></li>
                                {% else %}
                                    <li class="{% if app.request.attributes.get('_route') starts with 'logout' %}active{% endif %}">
                                        <a href="{{ path('fos_user_security_login') }}"><i
                                                    class="fa fa-sign-in openmodal"
                                                    aria-hidden="true"></i> Connexion</a>
                                    </li>

                                    <li class="{% if app.request.attributes.get('_route') starts with 'signin' %}active{% endif %}">
                                        <a href="{{ path('fos_user_registration_register') }}"><i
                                                    class="fa fa-user-plus openmodal"
                                                    aria-hidden="true"></i>
                                            Créer un compte</a></li>
                                {% endif %}
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

<div class="container">
    <div class="row">


        {% block flash_messages %}
        {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
        <div class="alert alert-{{ type }} alert-dismissible fade in text-center" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span
                        aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            {{ message | raw }}

        </div>
    </div>
    {% endfor %}
    {% endfor %}
    {% endblock %}


    {% block body %}

    {% endblock %}


</div>


<footer>

</footer>
{% block javascripts %}


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
            crossorigin="anonymous"></script>
    <!-- script for confirmation -->
    <script src="{{ asset('js/script.js') }}"></script>

    <!-- script for datetimepicker -->
    <script src="{{ asset('js/jquery.datetimepicker.full.min.js') }}"></script>
    <script>jQuery.datetimepicker.setLocale('fr');</script>
    <script>jQuery('.datetimepicker').datetimepicker({
            format: 'd/m/Y H:i'
        });</script>

    <!-- script for data tables -->
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/1.0.7/js/dataTables.responsive.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').dataTable({
                "order": [[0, "desc"]],
                "language": {
                    "url": "http://cdn.datatables.net/plug-ins/1.10.15/i18n/French.json"
                }
            });
        });
    </script>
    <!-- script-for-nav -->
    <script>
        $("span.menu").click(function () {
            $(".head-nav ul").slideToggle(300, function () {
                // Animation complete.
            });
        });
    </script>
    <!-- script-for-nav -->
{% endblock %}
{% block modal %}
    <div class="modal fade" tabindex="-1" role="dialog" id="modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <script>
        $(function () {
            $("a.openmodal").click(function (e) {
                e.preventDefault();

                $("#modal .modal-content").load(this.href, function () {
                    $("#modal").modal();
                })
            })
        })
    </script>
{% endblock %}
</body>
</html>